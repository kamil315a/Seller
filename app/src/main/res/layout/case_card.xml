<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="400dp"
    app:cardElevation="16dp"
    app:cardUseCompatPadding="true"
    app:cardCornerRadius="8dp">


    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/card_gradient"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_marginLeft="20dp"
                android:id="@+id/case_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ID: 1"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="end"
                android:layout_marginEnd="20dp"
                >

                <TextView
                    android:id="@+id/case_Counter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Likes: "
                    android:textSize="24sp" />

                <TextView
                    android:textSize="24dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1"/>

                <TextView
                    android:textSize="24sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="/"/>


                <TextView
                    android:textSize="24dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10000"/>
                    </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:orientation="horizontal">
            <LinearLayout

                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView

                    android:id="@+id/case_company"
                    android:layout_width="125dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:text="ORANGE"
                    android:textSize="24dp"
                    />
                <TextView
                    android:id="@+id/case_company_alt"
                    android:layout_width="125dp"
                    android:layout_height="wrap_content"
                    android:text="Company"
                    android:textSize="16dp"
                    android:layout_marginLeft="20dp"
                    />

                </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >

                <TextView
                    android:id="@+id/case_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:text="Reklamacja - niska jakosc/brak transmisji"
                    android:textSize="24sp"
                    android:gravity="left"
                    android:layout_marginRight="20dp"

                    />

                <TextView
                    android:layout_marginLeft="20dp"
                    android:id="@+id/case_name_alt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Za co otrzymamy zwrot pieniedzy"
                    android:textSize="16dp"
                    android:gravity="center"
                    android:layout_marginRight="20dp"

                    />

            </LinearLayout>

        </LinearLayout>

            <TextView
                android:layout_marginLeft="20dp"
                android:id="@+id/case_description_alt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="case_description"
                android:layout_marginRight="20dp"

                />

            <TextView
                android:layout_marginLeft="20dp"
                android:textSize="24dp"
                android:id="@+id/case_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Jeśli wykupiłeś gale FAME MMA i nie byłeś zadowolony z jakości transmisji/transmisji nie było przez problemy z połączeniem, Mozemy Odzyskac Twoje Pieniądze. Kliknij i pozwól nam odzyskać Twoje pieniądze!"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="20dp"

                />

    </androidx.appcompat.widget.LinearLayoutCompat>

</com.google.android.material.card.MaterialCardView>

